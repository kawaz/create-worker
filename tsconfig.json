{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,

    // Options for Emit (tsc build *.d.ts only, js is build by bun)
    "emitDeclarationOnly": true,
    "declaration": true /* Generate .d.ts files from TypeScript and JavaScript files in your project. */,
    "declarationMap": true /* Create source maps for declaration files. */,
    "removeComments": true /* Remove comments from the emitted JavaScript files. */,
    "outDir": "./lib" /* Specify an output folder for all emitted files. */,
    "rootDir": "./src" /* Specify the root directory of input files. */,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist*", "lib", "**/*.test.ts", "**/*.spec.ts"]
}
